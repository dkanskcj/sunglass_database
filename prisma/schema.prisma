
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement()) 
  // 대표 이미지
  thumbnailMain String
  // 추가 이미지
  thumbnailSub String
  // 판매상태
  // saleState SaleState @default(STOP)
  // 카테고리
  // category Category @default(RETANGULAR)
  // 상품명
  name String
  // 판매가
  cost Int
  // 할인 금액 or 퍼센트
  discount Int
  // 할인 시작 날짜
  discountStartDate DateTime?
  // 할인 종료 날짜
  discountEndDate DateTime?
  // 부가세
  // vat VATType @default(TAX)
  // 재고수량
  amount Int
  // 옵션명
  optionName String?
  // 옵션값
  optionValues String?
  // 첫번째 옵션, 두번째 옵션 ....
  optionList Option[]
  // 상세 설명
  description String?
  // 모델명
  modelName String
  // 브랜드
  brandName String
  // KC 인증
  isKC Boolean
  // 인증정보
  kcInfo String
  // 원산지
  origin String
  // 제조일자
  madeStartDate DateTime?
  // 유효일자
  validEndDate DateTime?
  // 미성년자 구매
  isTeenager Boolean
  // 상품 정보 제공 고시
  isShowDetail Boolean
  // 반품/교환 택배사
  courier String
  // 반품 배송비(편도)
  refundDeliveryFee Int
  // 교환 배송비(왕복)
  changeDeliveryFee Int
  // 반품/교환 주소지
  address String
  // 반품/교환 상세주소
  addressDetail String
  // 반품 교환지 대표 연락처
  tel String
  // 반품/교환 신청 기준일
  referenceDate String
  // 반품/교환 불가능 사유
  cancelReason String
  // AS 및 특이사항
  remark String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  @default(now())
  deletedAt DateTime?

}
// id, name, tel, owner, companyNumber, address
model Company {
  id Int @id @default(autoincrement())
  name String
  tel String
  owner String
  companyNumber String
  address String
  OrderList Ordertest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  @default(now())
  deletedAt DateTime?
}
model Option {
  id Int @id @default(autoincrement())
  // 추가금액
  addCost Int
  // 재고
  amount Int
  product Product? @relation(fields: [productId], references: [id])
  productId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  @default(now())
  deletedAt DateTime?

}
model Stocktest {
  id Int @id @default(autoincrement())
  // 거래처명
  company String
  // 상품명
  products String
  // 현재고
  now_stock Int
  // 재고
  stock Int
  // 옵션여부
  stock_option String?
  // 가격
  cost Int
  // 총액
  totalCost Int
  // 사유
  reason String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  deletedAt DateTime?
}

model Stock {
  id Int @id @default(autoincrement())
  // 거래처명
  company String
  // 상품명
  products String
  // 현재고
  now_stock Int
  // 재고
  stock Int
  // 옵션여부
  stock_option String?
  // 가격
  cost Int
  // 총액
  totalCost Int
  // 사유
  reason String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  deletedAt DateTime?
}

model Ordertest {
  // id Int @id @default(autoincrement())
  // 주문 번호
  orderNumber Int @id @default(autoincrement())
  // 주문자 아이디
  orderName String
  // 주문 회사
  // company String
  // 주문 제품
  product String
  // 상품명
  stock String
  // 배송
  shippingList Shipping[]
  company Company? @relation(fields: [companyId], references: [id])
  companyId Int?
  // product Product[]?
  // productId Int?
  // stock Stocktest[]?
  // stockId Int?
  // 메모
  notice String?
  orderStatus String
  // 주문 수량
  amount Int
  // 전화번호
  phoneNumber Int
  // 구매방법
  purchaseMethod String
  // 계좌
  purchase Int
  // 배송 상태
  shippingStatus String
  // 택배사
  shipping String
  // 배송비
  shipcost Int
  // 배송 주소
  shipAddress String
  // 결제 금액
  totalCost Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  deletedAt DateTime?
}

model Shipping{
  id Int @id @default(autoincrement())
  // 주문 배열
  ordertest Ordertest? @relation(fields: [orderId], references: [orderNumber])
  orderId Int?
  // 쿠폰
  coupon String?
  // 구분
  status String?

}
